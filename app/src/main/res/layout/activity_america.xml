<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivityAmerica"
    android:background="@drawable/image_6">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="285dp"
        android:layout_height="70dp"
        android:layout_marginBottom="580dp"
        android:gravity="center"
        android:text="@string/title"
        android:textColor="@color/white"
        android:textSize="22sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="150dp"
        android:layout_height="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="390dp"
        android:gravity="center"
        android:text="@string/country"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:fontFamily="sans-serif-black"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="90dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <Button
            android:id="@+id/button1"
            style="@style/Theme.AppCompat.Light.NoActionBar"
            android:layout_width="260dp"
            android:layout_height="50dp"
            android:layout_marginBottom="20dp"
            android:alpha="0.85"
            android:background="@drawable/custom_button"
            android:text="@string/state_1"
            android:textColor="@color/black" />


        <Button
            android:id="@+id/button2"
            style="@style/Theme.AppCompat.Light.NoActionBar"
            android:layout_width="260dp"
            android:layout_height="50dp"
            android:layout_marginBottom="20dp"
            android:alpha="0.85"
            android:background="@drawable/custom_button"
            android:text="@string/state_2"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/button3"
            style="@style/Theme.AppCompat.Light.NoActionBar"
            android:layout_width="260dp"
            android:layout_height="50dp"
            android:layout_marginBottom="20dp"
            android:alpha="0.85"
            android:background="@drawable/custom_button"
            android:text="@string/state_3"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/button4"
            style="@style/Theme.AppCompat.Light.NoActionBar"
            android:layout_width="260dp"
            android:layout_height="50dp"
            android:layout_marginBottom="20dp"
            android:alpha="0.85"
            android:background="@drawable/custom_button"
            android:text="@string/state_4"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/button5"
            style="@style/Theme.AppCompat.Light.NoActionBar"
            android:layout_width="260dp"
            android:layout_height="50dp"
            android:layout_marginBottom="20dp"
            android:alpha="0.85"
            android:background="@drawable/custom_button"
            android:text="@string/state_5"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/button6"
            style="@style/Theme.AppCompat.Light.NoActionBar"
            android:layout_width="260dp"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:alpha="0.85"
            android:background="@drawable/custom_button"
            android:text="@string/state_6"
            android:textColor="@color/black" />

    </LinearLayout>

    <ImageView
        android:id="@+id/ImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="11dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="28dp"
        android:layout_marginBottom="693dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/textView2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/back"
        android:contentDescription="@null"/>

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/untitled_design__5__1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="470dp"
        android:contentDescription="@null"/>


</androidx.constraintlayout.widget.ConstraintLayout>